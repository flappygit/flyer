#: import C kivy.utils.get_color_from_hex
AddButtons:
<AddButtons>
	redButton: red_button
	orientation: 'vertical'
	spacing: 10
	padding: 10
	Button:
		background_normal: 'blue_normal.png' 
		background_down: 'blue_down.png'
		border: 2, 2, 2, 2
		text: 'Hello'
	Button:
		background_normal: 'red_normal.png'
		background_down: 'red_down.png'
		border: 10,10,10,10
		text: 'Beautiful'
		id: red_button
		on_press: root.printPos()
		canvas:
			Rectangle:
				# Centering the canvas image is a pain. You have to add half of the
				# amount of free space on both sides to center it both vertically 
				# horizontally
				pos: self.pos[0] + self.size[0]*0.1, self.pos[1] + self.size[1]*0.1 
				size: self.size[0]* .8, self.size[1] *.8
				source: 'blue_down.png'
	#Normal Coloured Button
	Button:
		text: 'World' 
		background_color: C('#F4CB0D')